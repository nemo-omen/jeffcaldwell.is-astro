---
// import BurgerMenu from './BurgerMenu.svelte';
const current = Astro.url.pathname;
---

<header role="banner">
  <a href="/">
    <img src="/Grackle.svg" width="100" height="100" alt="A grackle." />
  </a>
  <!--<a href="/" id="site-brand">JeffCaldwell.is</a>-->
  <!--<div class="header-inner">-->
  <nav aria-label="primary">
    <ul role="list">
      <li>
        <a href="/" class={current === '/' ? 'current' : ''}>Home</a>
      </li>
      <li>
        <a href="/blog" class={current === '/blog' ? 'current' : ''}>Blog</a>
      </li>
      <li>
        <a href="/projects" class={current === '/projects' ? 'current' : ''}>Projects</a>
      </li>
      <li>
        <a href="/about" class={current === '/about' ? 'current' : ''}>About</a>
      </li>
    </ul>
  </nav>
  <!--</div>-->
</header>


<style>
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding: var(--size-2);
  gap: var(--size-1);
  container: header / inline-size;
}

img {
  border: 3px solid var(--primary);
  border-radius: 50%;
  background-color: var(--primary);
}

  nav {
    margin: 0;
    padding: 0;
  }
  ul {
    display: flex;
    flex-direction: row;
    gap: var(--size-2);
    justify-content: flex-end;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    display: flex;
    justify-content: center;
    align-items: stretch;
  }

  a {
    font-size: var(--size-1);
  }

  nav ul li a {
    line-height: 1;
    font-size: var(--size-1);
    font-weight: 400;
    color: currentColor;
    text-decoration-color: transparent;
    outline-color: transparent;
    transition: text-decoration-color 0.2s ease-in-out,
                text-underline-offset 0.2s ease-in-out,
                outline-color 0.2s ease-in-out;
                padding: 0.25em 0;
  }

  nav a:hover,
  nav a:focus,
  .current {
    background-color: hsl(var(--bg-darker-hsl), 90%);
    text-decoration-color: currentColor;
  }

  nav a:focus {
    text-decoration-color: transparent;
  }

  @container (max-width: 600px) {
    a {
      font-size: var(--size-0);
    }

    ul {
      gap: var(--size-1);
    }
  }

  @container (max-width: 400px) {
    header {
      gap: var(--size--1);
    }

   ul {
    gap: var(--size--2);
   } 
  }

@media (max-width: 509px) {

  header {
    flex-direction: column;
    align-items: center;
    padding: var(--size-1);
  }

  nav {
    width: 100%;
  }

  ul {
    /* gap: 0.25em var(--size--2); */
    justify-content: space-between;
    width: 100%;
  }
}
  
 </style>
