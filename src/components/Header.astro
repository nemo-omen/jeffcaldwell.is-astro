---
const current = Astro.url.pathname;
---

<header>
  <!--<a href="/" id="site-brand">JeffCaldwell.is</a>-->
  <div class="header-inner">
    <nav>
      <a href="/" class={current === '/' ? 'current' : ''}>Home</a>
      <a href="/blog" class={current === '/blog' ? 'current' : ''}>Blog</a>
      <a href="/projects" class={current === '/projects' ? 'current' : ''}>Projects</a>
      <a href="/about" class={current === '/about' ? 'current' : ''}>About</a>
    </nav>
  </div>
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--size-3);
    /* background-color: var(--primary); */
    transition: opacity 0.2s ease-in-out;
  }

  .header-inner {
    width: 100%;
    max-width: var(--width-max-ui);
  }

  nav {
    display: flex;
    gap: var(--size-1);
    justify-content: space-between;
    width: 100%;
  }

  nav a {
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 1;
    font-size: var(--size-0);
    text-transform: uppercase;
    color: currentColor;
    text-decoration-color: transparent;
    outline-color: transparent;
    transition: text-decoration-color 0.2s ease-in-out,
                text-underline-offset 0.2s ease-in-out
                outline-color 0.2s ease-in-out;
    padding: 0.25em;
  }

  nav a:hover,
  nav a:focus,
  .current {
    text-decoration-color: currentColor;
  }

  nav a:focus {
    text-decoration-color: transparent;
  }

  @media(min-width: 48rem) {
    nav {
      gap: var(--size-2);
    }
    nav a {
      font-size: var(--size-1);
    }
  }

  @media(max-width: 23rem) {
    nav {
      gap: var(--size--1);
    }

    nav a {
      font-size: var(--size-0);
    }
  }
</style>
