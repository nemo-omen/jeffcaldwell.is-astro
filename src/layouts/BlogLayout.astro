---
import Layout from '../layouts/Layout.astro';

export interface props {
  title: string;
}

const {data} = Astro.props;

const {title, date, tags} = data;
---

<Layout {title}>
  <main id="main">
    <article class="flow blog-post">
      <h1>{title}</h1>
      <div class="post-meta">
        <time>{date.toLocaleDateString('en-us', {weekday: 'long', month: 'long', day: 'numeric', year: 'numeric'})}</time>
        <div class="taglist">
          <span aria-label="Post tags" title="Post tags">üè∑Ô∏è</span>
          {tags.map((tag: string) => <a href=`/tags/${tag.toLowerCase()}` class="tag">#{tag}</a>)}
        </div>
      </div>
      <slot />
    </article>
  </main>
</Layout>
